<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovilApp.Admin">
    <ContentPage.Content>
        
        <StackLayout Orientation="Vertical" Padding="32" Spacing="10">
            <Label Text="Modo Admin"
        HorizontalOptions="Center" FontSize="Large" />
            <Button Text="Ver lista de usuarios" x:Name="BtnAllUser"/>
            <Button Text="Actualizar usuario" x:Name="btnActualizar"/>
            <Button Text="Eliminar usuario" x:Name="btnEliminar"/>

            <Label x:Name="StatusMessage" FontSize="Medium" />
            <ScrollView Orientation="Horizontal">
                
                <ListView x:Name="userList">  
                    <ListView.ItemTemplate>  
                        <DataTemplate>
                            <TextCell Text="{Binding Nombre}" Detail="{Binding Email}"></TextCell>  
                        </DataTemplate>  
                    </ListView.ItemTemplate>  
                </ListView>  
                
            </ScrollView>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>